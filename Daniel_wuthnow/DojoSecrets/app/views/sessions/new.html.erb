<div class="container" style="margin-top:20px;">

	<h3>Login</h3>

	<form action="/sessions" method="post">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<div class="row">
			<div class="form-group row col-sm-9">
				<label class="col-sm-3" for="email">Email</label>
				<input type="text" name="email" class="form-control col-sm-9" id="email">
			</div>
			<div class="row col-sm-3">
				<% if flash[:error_email] %>
					<p style="color: red" class="offset-sm-3">Incorrect email</p>
				<% end %>
			</div>
		</div>
		<div class="row">
			<div class="form-group row col-sm-9">
				<label class="col-sm-3" for="password">Password</label>
				<input type="password" name="password" class="form-control col-sm-9" id="password">
			</div>
			<div class="col-sm-3">
				<% if flash[:error_password] %>
					<p style="color: red" class="offset-sm-3">Incorrect Password</p>
				<% end %>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-9 offset-sm-3">
				<button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Login</button>
			<a href="/users/new">
				<button class="btn btn-primary">Register</button>
			</a>
			</div>
			
		</div>
	</form>

</div>